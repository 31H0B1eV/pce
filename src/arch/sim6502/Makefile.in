# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..

pcesrc := $(topdir)/src
pcedst := $(reldir)/src


include $(reldir)/config.inc


CC_FLG += -I$(srcdir)


FILES := console main sim6502

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)

OBJ_EXT	:= \
	$(pcedst)/cpu/e6502/e6502.a \
	$(pcedst)/devices/memory.o \
	$(pcedst)/lib/brkpt.o \
	$(pcedst)/lib/cmd.o \
	$(pcedst)/lib/console.o \
	$(pcedst)/lib/hexdump.o \
	$(pcedst)/lib/ihex.o \
	$(pcedst)/lib/iniram.o \
	$(pcedst)/lib/load.o \
	$(pcedst)/lib/log.o \
	$(pcedst)/lib/monitor.o \
	$(pcedst)/lib/path.o \
	$(pcedst)/lib/srec.o \
	$(pcedst)/lib/sysdep.o \
	$(pcedst)/libini/libini.a


HDR_EXT	:= \
	$(pcedst)/config.h \
	cpu/e6502/e6502.h \
	devices/memory.h \
	lib/brkpt.h \
	lib/cmd.h \
	lib/console.h \
	lib/hexdump.h \
	lib/ihex.h \
	lib/iniram.h \
	lib/load.h \
	lib/log.h \
	lib/monitor.h \
	lib/path.h \
	lib/srec.h \
	lib/sysdep.h \
	libini/libini.h

MAN1	:=

BIN	:= pce-sim6502

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ) pce-sim6502.cfg
DCL := Makefile

DIST := $(SRC) $(HDR) Makefile.in sim6502.cfg.in


include $(reldir)/rules.inc


all: $(BIN) $(OBJ) pce-sim6502.cfg


install: install-bin pce-sim6502.cfg
	$(QR)$(INSTALL) -d -m 755 $(DESTDIR)$(etcdir)
	$(QP)echo "  CP     pce-sim6502.cfg"
	$(QR)test -f $(DESTDIR)$(etcdir)/pce-sim6502.cfg || \
		$(INSTALL) -m 644 pce-sim6502.cfg $(DESTDIR)$(etcdir)


pce-sim6502: $(OBJ) $(OBJ_EXT)
	$(QP)echo "  LD     $@"
	$(QR)$(LD) $(LD_FLG) -o $@ $(OBJ) $(OBJ_EXT) $(LD_FLG_EXTRA)


pce-sim6502.cfg: sim6502.cfg.in
	$(QP)echo "  SED    $@"
	$(QR)sed -e "s]PCE_DIR_DATA]$(datdir)]g" < $< > $@


console.o:	console.c $(SDP)
main.o:		main.c $(SDP)
sim6502.o:	sim6502.c $(SDP)
