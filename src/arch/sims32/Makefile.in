# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..

pcesrc := $(topdir)/src
pcedst := $(reldir)/src


include $(reldir)/config.inc


CC_FLG += -I$(srcdir)


FILES := cmd_s32 main sercons sims32

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)

OBJ_EXT	:= \
	$(pcedst)/cpu/sparc32/sparc32.a \
	$(pcedst)/chipset/82xx/e8250.o \
	$(pcedst)/devices/device.o \
	$(pcedst)/devices/memory.o \
	$(pcedst)/devices/serport.o \
	$(pcedst)/lib/brkpt.o \
	$(pcedst)/lib/cmd.o \
	$(pcedst)/lib/console.o \
	$(pcedst)/lib/hexdump.o \
	$(pcedst)/lib/ihex.o \
	$(pcedst)/lib/iniram.o \
	$(pcedst)/lib/load.o \
	$(pcedst)/lib/log.o \
	$(pcedst)/lib/monitor.o \
	$(pcedst)/lib/srec.o \
	$(pcedst)/lib/sysdep.o \
	$(pcedst)/libini/libini.a


HDR_EXT	:= \
	$(pcedst)/config.h \
	cpu/sparc32/sparc32.h \
	chipset/82xx/e8250.h \
	devices/device.h \
	devices/memory.h \
	devices/serport.h \
	lib/brkpt.h \
	lib/cmd.h \
	lib/console.h \
	lib/hexdump.h \
	lib/ihex.h \
	lib/iniram.h \
	lib/load.h \
	lib/log.h \
	lib/monitor.h \
	lib/srec.h \
	lib/sysdep.h \
	libini/libini.h

MAN1	:=

BIN	:= pce-sims32

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ) pce-sims32.cfg
DCL := Makefile

DIST := $(SRC) $(HDR) Makefile.in sims32.cfg.in


include $(reldir)/rules.inc


all: $(BIN) $(OBJ) pce-sims32.cfg


install: install-bin pce-sims32.cfg
	$(QR)$(INSTALL) -d -m 755 $(DESTDIR)$(etcdir)
	$(QP)echo "  CP     pce-sims32.cfg"
	$(QR)test -f $(DESTDIR)$(etcdir)/pce-sims32.cfg || \
		$(INSTALL) -m 644 pce-sims32.cfg $(DESTDIR)$(etcdir)


pce-sims32: $(OBJ) $(OBJ_EXT)
	$(QP)echo "  LD     $@"
	$(QR)$(LD) $(LD_FLG) -o $@ $(OBJ) $(OBJ_EXT) $(LD_FLG_EXTRA)


pce-sims32.cfg: sims32.cfg.in
	$(QP)echo "  SED    $@"
	$(QR)sed -e "s]PCE_DIR_DATA]$(datdir)]g" < $< > $@


cmd_s32.o:	cmd_s32.c $(SDP)
main.o:		main.c $(SDP)
sercons.o:	sercons.c $(SDP)
sims32.o:	sims32.c $(SDP)
