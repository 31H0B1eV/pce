# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..

pcesrc := $(topdir)/src
pcedst := $(reldir)/src


include $(reldir)/config.inc


CC_FLG += -I$(srcdir)


FILES := cmd_arm intc main sercons simarm timer

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)

OBJ_EXT	:= \
	$(pcedst)/cpu/arm/arm.a \
	$(pcedst)/chipset/e8250.o \
	$(pcedst)/devices/memory.o \
	$(pcedst)/devices/serport.o \
	$(pcedst)/lib/brkpt.o \
	$(pcedst)/lib/cmd.o \
	$(pcedst)/lib/hexdump.o \
	$(pcedst)/lib/ihex.o \
	$(pcedst)/lib/load.o \
	$(pcedst)/lib/log.o \
	$(pcedst)/libini/libini.a


HDR_EXT	:= \
	$(pcedst)/config.h \
	cpu/arm/arm.h \
	chipset/e8250.h \
	devices/memory.h \
	devices/serport.h \
	lib/brkpt.h \
	lib/cmd.h \
	lib/hexdump.h \
	lib/ihex.h \
	lib/load.h \
	lib/log.h \
	libini/libini.h

MAN1	:=

BIN	:= simarm

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ) simarm.cfg
DCL := Makefile


include $(reldir)/rules.inc


all: $(BIN) $(OBJ) simarm.cfg


install: install-bin simarm.cfg
	$(INSTALL) -d -m 755 $(DESTDIR)$(etcdir)
	test -f $(DESTDIR)$(etcdir)/simarm.cfg || $(INSTALL) -m 644 simarm.cfg $(DESTDIR)$(etcdir)


simarm: $(OBJ) $(OBJ_EXT)
	$(LD) $(LD_FLG) -o $@ $(OBJ) $(OBJ_EXT) $(LD_FLG_EXTRA)

simarm.cfg: simarm.cfg.in
	sed -e "s]PCE_DIR_DATA]$(datdir)]g" < $< > $@


cmd_arm.o:	cmd_arm.c $(SDP)
intc.o:		intc.c $(SDP)
main.o:		main.c $(SDP)
sercons.o:	sercons.c $(SDP)
simarm.o:	simarm.c $(SDP)
timer.o:	timer.c $(SDP)
