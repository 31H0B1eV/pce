# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..

pcesrc := $(topdir)/src
pcedst := $(reldir)/src


include $(reldir)/config.inc


CC_FLG += -I$(srcdir)


FILES := cmd_arm intc main pci sercons simarm timer

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)

OBJ_EXT	:= \
	$(pcedst)/cpu/arm/arm.a \
	$(pcedst)/chipset/82xx/e8250.o \
	$(pcedst)/devices/pci.o \
	$(pcedst)/devices/pci-ata.o \
	$(pcedst)/devices/ata.o \
	$(pcedst)/devices/device.o \
	$(pcedst)/devices/memory.o \
	$(pcedst)/devices/serport.o \
	$(pcedst)/devices/slip.o \
	$(pcedst)/lib/brkpt.o \
	$(pcedst)/lib/cmd.o \
	$(pcedst)/lib/console.o \
	$(pcedst)/lib/hexdump.o \
	$(pcedst)/lib/ihex.o \
	$(pcedst)/lib/srec.o \
	$(pcedst)/lib/inidsk.o \
	$(pcedst)/lib/iniram.o \
	$(pcedst)/lib/load.o \
	$(pcedst)/lib/log.o \
	$(pcedst)/lib/msg.o \
	$(PCE_BLK_OBJ) \
	$(pcedst)/libini/libini.a


HDR_EXT	:= \
	$(pcedst)/config.h \
	cpu/arm/arm.h \
	chipset/82xx/e8250.h \
	devices/device.h \
	devices/memory.h \
	devices/ata.h \
	devices/pci.h \
	devices/pci-ata.h \
	devices/serport.h \
	devices/slip.h \
	lib/brkpt.h \
	lib/cmd.h \
	lib/console.h \
	lib/hexdump.h \
	lib/ihex.h \
	lib/srec.h \
	lib/inidsk.h \
	lib/iniram.h \
	lib/load.h \
	lib/log.h \
	lib/msg.h \
	$(PCE_BLK_HDR) \
	libini/libini.h

MAN1	:=

BIN	:= simarm

ifeq "$(PCE_ENABLE_TUN)" "1"
OBJ_EXT += $(pcedst)/lib/tun.o
HDR_EXT += lib/tun.h
endif

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ) simarm.cfg
DCL := Makefile


include $(reldir)/rules.inc


all: $(BIN) $(OBJ) simarm.cfg


install: install-bin simarm.cfg
	$(QR)$(INSTALL) -d -m 755 $(DESTDIR)$(etcdir)
	$(QP)echo "  CP     simarm.cfg"
	$(QR)test -f $(DESTDIR)$(etcdir)/simarm.cfg || $(INSTALL) -m 644 simarm.cfg $(DESTDIR)$(etcdir)


simarm: $(OBJ) $(OBJ_EXT)
	$(QP)echo "  LD     $@"
	$(QR)$(LD) $(LD_FLG) -o $@ $(OBJ) $(OBJ_EXT) $(LD_FLG_EXTRA)


simarm.cfg: simarm.cfg.in
	$(QP)echo "  SED    $@"
	$(QR)sed -e "s]PCE_DIR_DATA]$(datdir)]g" < $< > $@


cmd_arm.o:	cmd_arm.c $(SDP)
intc.o:		intc.c $(SDP)
main.o:		main.c $(SDP)
pci.o:		pci.c $(SDP)
sercons.o:	sercons.c $(SDP)
simarm.o:	simarm.c $(SDP)
timer.o:	timer.c $(SDP)
