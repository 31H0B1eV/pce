# Makefile
# $Id: Makefile.in,v 1.3 2003/12/23 03:08:58 hampa Exp $

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..

include $(reldir)/Makefile.inc


FILES := cga ega hgc mda memory nvram video

SRC	:= $(foreach f,$(FILES),$(f).c)
OBJ	:= $(foreach f,$(FILES),$(f).o)
HDR	:= $(foreach f,$(FILES),$(f).h)
SDP	:= Makefile


all: $(BIN) $(OBJ)


clean:
	rm -f $(BIN) $(OBJ)


cga.o:		cga.c cga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

ega.o:		ega.c ega.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

hgc.o:		hgc.c hgc.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

mga.o:		mga.c mga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

memory.o:	memory.c memory.h $(SDP)

nvram.o:	nvram.c nvram.h memory.h \
		lib/log.h $(SDP)

video.o:	video.c video.h memory.h $(SDP)
