# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..


include $(reldir)/config.inc


FILES := cga disk ega hgc mda memory nvram serial video

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)
SDP := Makefile

CLN := $(OBJ) $(BIN)
DCL := Makefile


include $(reldir)/rules.inc


all: $(BIN) $(OBJ)


disk.o:		disk.c disk.h $(SDP)

cga.o:		cga.c cga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

ega.o:		ega.c ega.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

hgc.o:		hgc.c hgc.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

mga.o:		mga.c mga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

memory.o:	memory.c memory.h $(SDP)

nvram.o:	nvram.c nvram.h memory.h \
		lib/log.h $(SDP)

serial.o:	serial.c serial.h memory.h \
		chipset/e8250.h

video.o:	video.c video.h memory.h $(SDP)
