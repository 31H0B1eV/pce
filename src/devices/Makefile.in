# Makefile
# $Id: Makefile.in,v 1.4 2003/12/29 11:06:23 hampa Exp $

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..


include $(reldir)/config.inc


FILES := cga ega hgc mda memory nvram video

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)
SDP := Makefile

CLN := $(OBJ) $(BIN)
DCL := Makefile


include $(reldir)/rules.inc


all: $(BIN) $(OBJ)


cga.o:		cga.c cga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

ega.o:		ega.c ega.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

hgc.o:		hgc.c hgc.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

mga.o:		mga.c mga.h video.h memory.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

memory.o:	memory.c memory.h $(SDP)

nvram.o:	nvram.c nvram.h memory.h \
		lib/log.h $(SDP)

video.o:	video.c video.h memory.h $(SDP)
