# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..


include $(reldir)/config.inc


FILES := cga ega hgc mda vga video

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)
SDP := Makefile

CLN := $(OBJ) $(BIN)
DCL := Makefile


include $(reldir)/rules.inc


all: $(BIN) $(OBJ)


cga.o:		cga.c cga.h video.h devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

ega.o:		ega.c ega.h video.h devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

hgc.o:		hgc.c hgc.h hgc_font.h video.h devices/memory.h \
		libini/libini.h terminal/terminal.h lib/log.h \
		$(SDP)

mda.o:		mda.c mda.h mda_font.h video.h devices/memory.h \
		libini/libini.h terminal/terminal.h lib/log.h \
		$(SDP)

vga.o:		vga.c vga.h video.h devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h \
		lib/hexdump.h $(SDP)

video.o:	video.c video.h devices/memory.h $(SDP)
