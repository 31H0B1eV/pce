# src/devices/video/Makefile

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..


include $(reldir)/config.inc


FILES := cga ega hgc mda plantronics vga video wy700

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h) cga_font.h hgc_font.h mda_font.h
SDP := Makefile

CLN := $(OBJ) $(BIN)
DCL := Makefile

DIST := $(SRC) $(HDR) Makefile.in


include $(reldir)/rules.inc


all: $(BIN) $(OBJ)


cga.o:		cga.c cga.h cga_font.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h lib/msg.h

ega.o:		ega.c ega.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h lib/msg.h

hgc.o:		hgc.c hgc.h hgc_font.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h lib/msg.h

mda.o:		mda.c mda.h mda_font.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h lib/msg.h

plantronics.o:	plantronics.c plantronics.h cga.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h

vga.o:		vga.c vga.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h lib/msg.h

video.o:	video.c video.h $(SDP) devices/memory.h lib/msg.h


wy700.o:	wy700.c wy700.h cga.h video.h $(SDP) \
		devices/memory.h \
		libini/libini.h \
		terminal/terminal.h \
		lib/log.h
