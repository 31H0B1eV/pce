# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..

pcesrc := $(topdir)/src
pcedst := $(reldir)/src


include $(reldir)/config.inc


FILES := pce-img

SRC := $(foreach f,$(FILES),$(f).c)
OBJ := $(foreach f,$(FILES),$(f).o)
HDR := $(foreach f,$(FILES),$(f).h)

OBJ_EXT	:= $(PCE_BLK_OBJ)

HDR_EXT	:= $(pcedst)/config.h $(PCE_BLK_HDR) \

MAN1 := pce-img.1
MANT := $(foreach f,$(MAN1),$(f).txt $(f).ps)
BIN  := pce-img

SDP := Makefile $(HDR) $(HDR_EXT)
BDP := Makefile $(OBJ) $(OBJ_EXT)

CLN := $(OBJ) $(BIN) $(MANT)
DCL := Makefile

DIST := $(SRC) $(HDR) $(MAN1) Makefile.in


include $(reldir)/rules.inc


all: $(BIN)


install: $(BIN) install-bin install-man


pce-img: $(OBJ) $(OBJ_EXT)
	$(QP)echo "  LD     $@"
	$(QR)$(LD) $(LD_FLG) -o $@ $(OBJ) $(OBJ_EXT) $(LD_FLG_EXTRA)


pce-img.o:	pce-img.c $(SDP)
