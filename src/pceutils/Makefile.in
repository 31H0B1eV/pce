# Makefile
# $Id: Makefile.in,v 1.4 2003/09/02 11:44:47 hampa Exp $

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..


include $(reldir)/Makefile.inc


SRC	:= pceboot.asm pceexit.asm pcehimem.asm pcestop.asm pcetime.asm

OBJ	:= pceboot.asm pceexit.asm pcehimem.asm pcestop.asm pcetime.asm
OBJ_EXT	:=

HDR	:=
HDR_EXT	:=

MAN	:=

BIN	:= pceboot.com pceexit.com pcehimem.sys pcestop.com pcetime.com

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)


all: $(BIN)


clean:
	rm -f $(OBJ) $(BIN)


install:
	$(INSTALL) -d -m 755 $(datdir)/pce/pceutils
	$(INSTALL) -m 644 $(BIN) $(datdir)/pce/pceutils


%.com: %.asm
	nasm -O2 -I$(reldir)/src -f bin $< -o $@

%.sys: %.asm
	nasm -O2 -I$(reldir)/src -f bin $< -o $@


pceboot.com:	pceboot.asm
pceexit.com:	pceexit.asm
pcehimem.sys:	pcehimem.asm
pcestop.com:	pcestop.asm
pcetime.com:	pcetime.asm
