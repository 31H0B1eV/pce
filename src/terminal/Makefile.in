# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..


include $(reldir)/config.inc


SRC := font.c keys.c null.c term-old.c terminal.c
OBJ := font.o keys.o null.o term-old.o terminal.o
HDR := font.h keys.h null.h term-old.h terminal.h
BIN :=

HDR_EXT := libini/libini.h

ifeq "$(PCE_X11_USE)" "1"
	SRC += x11.c
	OBJ += x11.o
	HDR += x11.h
	CC_FLG_EXTRA += $(PCE_X11_CCF)
endif

ifeq "$(PCE_SDL_USE)" "1"
	SRC += sdl.c
	OBJ += sdl.o
	HDR += sdl.h
	CC_FLG_EXTRA += $(PCE_SDL_CCF)
endif

SDP := Makefile $(HDR) $(HDR_EXT)
BDP := Makefile $(OBJ) $(OBJ_EXT)

CLN := $(OBJ) $(BIN)
DCL := Makefile


include $(reldir)/rules.inc


all: $(OBJ)


font.o:		font.c $(SDP)
keys.o:		keys.c $(SDP)
null.o:		null.c $(SDP)
sdl.o:		sdl.c $(SDP)
term-old.o:	term-old.c $(SDP)
terminal.o:	terminal.c $(SDP)
x11.o:		x11.c $(SDP)
