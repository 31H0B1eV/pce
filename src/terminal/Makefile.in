# Makefile
# $Id: Makefile.in,v 1.2 2003/08/19 17:06:19 hampa Exp $

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../..
pcesrc	:= $(topdir)/src
pcedst	:= ..

include $(reldir)/Makefile.inc


SRC	:= terminal.c vt100.c
OBJ	:= terminal.o vt100.o
HDR	:= terminal.h vt100.h
MAN	:=
BIN	:=

ifeq "$(PCE_X11_USE)" "1"
	SRC += xterm.c
	OBJ += xterm.o
	HDR += xterm.h
	CC_FLG_EXTRA := $(PCE_X11_CCF)
endif

SDP	:= Makefile $(HDR) $(HDR_EXT)
BDP	:= Makefile $(OBJ) $(OBJ_EXT)


all: $(BIN) $(OBJ)


clean:
	rm -f $(OBJ) $(BIN)


terminal.o:	terminal.c $(SDP)
vt100.o:	vt100.c $(SDP)
xterm.o:	xterm.c $(SDP)
