# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..


include $(reldir)/config.inc


ifeq "$(PCE_HOST_IA32)" "1"
CC_FLG_EXTRA += -DPCE_HOST_IA32
endif

SRC := cc.c disasm.c ea.c opcodes.c e68000.c
OBJ := cc.o disasm.o ea.o opcodes.o e68000.o
HDR := e68000.h internal.h
BIN := e68000.a

SDP := Makefile $(HDR) $(HDR_EXT)
BDP := Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ)
DCL := Makefile

DIST := $(SRC) $(HDR) Makefile.in


include $(reldir)/rules.inc


all: $(BIN)


e68000.a: $(OBJ)


cc.o:		cc.c $(SDP)
disasm.o:	disasm.c $(SDP)
ea.o:		ea.c $(SDP)
opcodes.o:	opcodes.c $(SDP)
e68000.o:	e68000.c $(SDP)
