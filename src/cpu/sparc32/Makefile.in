# Makefile
# $Id$

srcdir := @srcdir@
topdir := @top_srcdir@
subdir :=
reldir := ../../..


include $(reldir)/config.inc


ifeq "$(PCE_HOST_IA32)" "1"
CC_FLG_EXTRA += -DPCE_HOST_IA32
endif

SRC := disasm.c mmu.c opcodes.c sparc32.c
OBJ := disasm.o mmu.o opcodes.o sparc32.o
HDR := sparc32.h internal.h
BIN := sparc32.a

SDP := Makefile $(HDR) $(HDR_EXT)
BDP := Makefile $(OBJ) $(OBJ_EXT)

CLN := $(BIN) $(OBJ)
DCL := Makefile

DIST := $(SRC) $(HDR) Makefile.in


include $(reldir)/rules.inc


all: $(BIN)


sparc32.a: $(OBJ)


disasm.o:	disasm.c $(SDP)
mmu.o:		mmu.c $(SDP)
opcodes.o:	opcodes.c $(SDP)
sparc32.o:	sparc32.c $(SDP)
