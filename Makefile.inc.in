# Makefile include file
# $Id: Makefile.inc.in,v 1.7 2003/09/15 07:53:48 hampa Exp $

#--------------------------------------------------------------------------
# user editable section

prefix  	= @prefix@
etcdir		= @sysconfdir@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
incdir		= @includedir@
datdir		= @datadir@


# Executables

CC		= @CC@
CFLAGS		= @CFLAGS@
CC_FLG		= $(CFLAGS) -I$(reldir)/src

NASM		= @NASM@
PCE_HAVE_NASM	:= @PCE_HAVE_NASM@

LD              = @CC@
LDFLAGS		= @LDFLAGS@
LD_FLG          = $(LDFLAGS)

AR		= @AR@
AR_FLG		= -rs

LN_S		= @LN_S@
LN_S_FLG	= -f

INSTALL		= @INSTALL@
INSTALL_FLG	=

@SET_MAKE@
MAKE_FLG	=


PCE_X11_USE	:= @PCE_X11_USE@
PCE_X11_CCF	:= @PCE_X11_CCF@
PCE_X11_LDF	:= @PCE_X11_LDF@

PCE_SDL_USE	:= @PCE_SDL_USE@
PCE_SDL_CCF	:= @PCE_SDL_CCF@
PCE_SDL_LDF	:= @PCE_SDL_LDF@


# end of user editable section
#--------------------------------------------------------------------------

PCE_VERSION_MAJ := @PCE_VERSION_MAJ@
PCE_VERSION_MIN := @PCE_VERSION_MIN@
PCE_VERSION_MIC := @PCE_VERSION_MIC@
PCE_VERSION_STR := @PCE_VERSION_STR@


VPATH = $(srcdir)


ifneq "$(reldir)" "$(topdir)"
CC_FLG	+= -I$(topdir)/src
endif


all: subdirs


subdirs: subdirs-rec
subdirs-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG)); \
	done
endif


clean: clean-rec
clean-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG) clean); \
	done
endif


install: install-rec
install-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG) install); \
	done
endif


%.o: %.c
	$(CC) -c $(CC_FLG) $(CC_FLG_EXTRA) -o $@ $<
