# Makefile include file
# $Id: Makefile.inc.in,v 1.3 2003/04/23 13:33:59 hampa Exp $

#--------------------------------------------------------------------------
# user editable section

prefix  	= @prefix@
etcdir		= @sysconfdir@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
incdir		= @includedir@
datdir		= @datadir@


# Executables

CC		= @CC@
CFLAGS		= @CFLAGS@
CC_FLG		= $(CFLAGS) -I$(reldir)/src

NASM		= @NASM@

LD              = @CC@
LDFLAGS		= @LDFLAGS@
LD_FLG          = $(LDFLAGS)

AR		= @AR@
AR_FLG		= -rs

LN_S		= @LN_S@
LN_S_FLG	= -f

INSTALL		= @INSTALL@
INSTALL_FLG	=

@SET_MAKE@
MAKE_FLG	=


# end of user editable section
#--------------------------------------------------------------------------

PCE_VERSION_MAJ := @PCE_VERSION_MAJ@
PCE_VERSION_MIN := @PCE_VERSION_MIN@
PCE_VERSION_MIC := @PCE_VERSION_MIC@
PCE_VERSION_STR := @PCE_VERSION_STR@


VPATH = $(srcdir)


ifneq "$(reldir)" "$(topdir)"
CC_FLG	+= -I$(topdir)/src
endif


all: subdirs


subdirs: subdirs-rec
subdirs-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG)); \
	done
endif


clean: clean-rec
clean-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG) clean); \
	done
endif


install: install-rec
install-rec:
ifneq "$(subdir)" ""
	@for dir in $(subdir); do \
		(cd $$dir && $(MAKE) $(MAKE_FLG) install); \
	done
endif


%.o: %.c
	$(CC) -c $(CC_FLG) -o $@ $<

%.bin: %.asm
	$(NASM) -f bin -l $*.lst -o $@ $<
